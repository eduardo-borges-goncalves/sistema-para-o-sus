</header>

<form action="/admin/authorize2" method="post">
  <div class="container">
    <h1>Autorizar</h1>

    <div id="checkboxDiv">
      <input type="radio" name="consultaOuExame" id="consulta" value="consulta">  Consulta
      <input type="radio" name="consultaOuExame" id="exame" value="exame">  Exame
    </div>
    <br>

    <div id="especialidadeDiv">
    Especialidade: <input name="especialidadeAut" id="especialidadeInput" list="especialidadeList">
    <datalist id="especialidadeList">
      <option value="Ortopedia"></option>
      <option value="Cirurgia Geral"></option>
      <option value="Clínica Médica"></option>
      <option value="Ginecologia"></option>
    </datalist>
    </div>
    <div id="tipoDeExameDiv">        
      Tipo de Exame: <input name="tipoDeExamnaeAut" id="tipoDeExameInput" list="tipo-de-exame-list">
      <datalist id="tipo-de-exame-list">
        <option value="Ressonância"></option>
        <option value="Tomografia"></option>
        <option value="Raio-x"></option>
        <option value="Ecocardiograma"></option>
        <option value="Endoscopia"></option>
        <option value="Ultrassom"></option>
        <option value="Colonoscopia"></option>
      </datalist>
    </div>
    <br>

    <div id="nameAut">
          Nome: <input  type="text" name="nameAut">
    </div> 
  
    <div class="divBut">
        <button type="submit" onclick="buscar()" >Buscar</button>
    </div>
  </div>
</form>


<div id="solicitationsToAuthorize"  class="transparent-div">

{{#each solicitations}}
  <div id="solicitationsCard">
    <div>
      Grav.: {{gravidade}}
    </div>
    <div>
      Data:
    </div>
    <div>
        Nome: {{name}}
    </div>
    <div>
        Idade: {{age}}
    </div>
    <div>
        Tipo: {{tipo}}
    </div>
    {{exame}}
     <div>
        {{especialidade}}
    </div>
    <div>
        <a href=""><button >Autorizar</button></a>
    </div>
  

  </div>
{{else}}

{{/each}}
</div>

<script src="/js/script-authorize.js"></script>







