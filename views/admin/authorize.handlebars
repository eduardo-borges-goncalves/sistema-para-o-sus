      <nav>
        <button class="menuBut" onclick="mobileMenu()">
            <div class="mobile-menu">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
            </div>
        </button>
              
        <ul class="nav-list" id="nav-list">
          <li  class="menu-element-level-one"id="menu-level-one">
            <button onclick="levelOneMenu()">
              Atendimento
            </button>
            <div id="sub-list">
              <ul class="sub-list">
                <li class= "menu-element"><a href="">Agendamentos</a></li>
                <li class= "menu-element"><a href="solicitations">Solicitações</a></li>
